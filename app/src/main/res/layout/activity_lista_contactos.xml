<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".listaContactos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        android:minHeight="70dp"
        android:theme="?attr/actionBarTheme"
        app:title="Contactos"
        app:titleMarginStart="135dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacto Favorito"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listView_favorito"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:divider="@color/darkGray"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contactos de Emergencia"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listViewEmergencia"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:divider="@color/darkGray"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Editar contacto"
        android:textColor="@color/white"
        android:translationY="35dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Eliminar contacto"
        android:textColor="@color/white"
        android:translationY="35dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="ajusteContactos"
        android:text="Regresar"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:translationY="40dp" />

</LinearLayout>