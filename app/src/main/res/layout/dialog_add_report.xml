<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/lightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Título del diálogo -->
        <TextView
            android:id="@+id/tvAgregarReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Reporte"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="12dp"
            android:background="@color/primaryColor"
            android:elevation="2dp" />

        <!-- Campo Título -->
        <EditText
            android:id="@+id/etTituloReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título del reporte"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <!-- Campo Descripción -->
        <EditText
            android:id="@+id/etDescripcionReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción del reporte"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <!-- Campo Responsable -->
        <EditText
            android:id="@+id/etResponsableReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Responsable del reporte"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <!-- Campo Fecha y Hora -->
        <EditText
            android:id="@+id/etFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha y hora del acontecimiento"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:clickable="true" />

        <!-- Campo Lugar -->
        <EditText
            android:id="@+id/etLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lugar de los acontecimientos"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <!-- Campo Acontecimientos -->
        <EditText
            android:id="@+id/etAcontecimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Acontecimientos"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
